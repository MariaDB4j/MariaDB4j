<?xml version="1.0"?>
<project name="MariaDB4J" default="extract" >
    <description>
        Ant task to download file from internet and extract during maven package
    </description>

    <target name="env">
        <echo message="Project path   : ${project.basedir}"/>
        <echo message="Output location: ${project.build.directory}"/>
        <echo message="Cache location : ${cacheDir}"/>
        <echo message="MariaDB version: ${mariaDB.version}"/>
        <mkdir dir="${cacheDir}" />
        <mkdir dir="${cacheDir}/input" />
    </target>

    <target name="download" depends="env"
        description="Download Mac file from bintray.com">
        <echo message="Downloading Mac MariaDB ${mariaDB.version} file ..." />
        <get src="file:///path/to/prepare/mariadb-${mariaDB.version}.arm64_monterey.bottle.tar.gz"
            skipexisting="true" 
            dest="${cacheDir}/input/mariadb-${mariaDB.version}.monterey.bottle.tar.gz" />
        <available property="download.file" file="${cacheDir}/input/download_file"/>
    </target>

    <target name="rename" if="${download.file}" depends="download"
        description="Rename downloaded temp file">
        <move file="${cacheDir}/input/download_file" tofile="${cacheDir}/input/mariadb-${mariaDB.version}.monterey.bottle.tar.gz"/>
    </target>

    <target name="extract" depends="env,download,rename"
        description="Extract project files">
        <echo message="Extracting tar.gz file" />
        <untar src="${cacheDir}/input/mariadb-${mariaDB.version}.monterey.bottle.tar.gz" 
                dest="${project.build.directory}"
                compression="gzip"  />
        <echo message="Copying files ..." />
        <copy todir="${project.build.directory}/generated-resources/ch/vorburger/mariadb4j/mariadb-${mariaDB.version}/macos-arm64">
            <fileset dir="${project.build.directory}/mariadb/${mariaDB.version}">
                <include name="bin/*"/>
                <include name="share/**/*"/>
            </fileset>
        </copy>
        <copy todir="${project.build.directory}/generated-resources/ch/vorburger/mariadb4j/mariadb-${mariaDB.version}/macos-arm64/bin"
                overwrite="yes" >
            <fileset dir="${project.build.directory}/mariadb/${mariaDB.version}/scripts">
                <include name="*"/>
            </fileset>
        </copy>
        <chmod dir="${project.build.directory}/generated-resources/ch/vorburger/mariadb4j/mariadb-${mariaDB.version}/macos-arm64/bin" perm="ugo+rx"
                includes="*"/>
    </target>
</project>